<head>
    <link rel="stylesheet" href="/register.css">
</head>
<div class="cntr">
    <div class="title">Register</div>
    <form action="/users/register" method="POST">
        <div class="user-details">
            <div class="inputbox">
                <span class="details">Tam Ad</span>
                <input type="text" name="fullname" placeholder="Tam Adınızı Giriniz." required>
            </div>
            <div class="inputbox">
                <span class="details">Kullanıcı adı</span>
                <input type="text" name="username" placeholder="Kullanıcı Adı Giriniz." required>
            </div>
            <div class="inputbox">
                <span class="details">Email</span>
                <input type="email" name="email" placeholder="Email adresinizi giriniz." required>
            </div>
            <div class="inputbox">
                <span class="details">Telefon Numarası</span>
                <input type="text" name="phone" placeholder="Telefon numaranızı giriniz." required>
            </div>
            <div class="inputbox">
                <span class="details">Şifre</span>
                <input type="password" name="password" placeholder="Şifre giriniz." required>
            </div>
            <div class="inputbox">
                <span class="details">Şifre onaylama</span>
                <input type="text" placeholder="Şifrenizi tekrar giriniz." required>
            </div>
        </div>
        <div class="gender-details">
            <input type="radio" name="gender" id="dot-1">
            <input type="radio" name="gender" id="dot-2">
            <span class="gender-title">Cinsiyet</span>
            <div class="category">
                <label for="dot-1">
                    <span class="dot one"></span>
                    <span class="gender">Kadın</span>
                </label>
                 <label for="dot-2">
                    <span class="dot two"></span>
                    <span class="gender">Erkek</span>
                </label>
            </div>
        </div>
        <div class="button">
            <input type="submit" value="register">
        </div>
    </form>
</div>